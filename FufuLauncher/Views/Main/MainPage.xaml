<Page
    x:Class="FufuLauncher.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helpers="using:FufuLauncher.Helpers"
    x:Name="MainPageRoot"
    Background="Transparent"
    Loaded="Page_Loaded">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="CustomPanelBackgroundBrush" 
                                     Color="{ThemeResource CardBackgroundFillColorDefault}"/>
                </ResourceDictionary>

                <ResourceDictionary x:Key="Default">
                    <SolidColorBrush x:Key="CustomPanelBackgroundBrush" 
                                     Color="#D9101010"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
            <helpers:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
            <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <helpers:BoolToGlyphConverter x:Key="BoolToGlyphConverter"/>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid>
            <ProgressRing Width="60" Height="60"
                          HorizontalAlignment="Center" VerticalAlignment="Center"
                          IsActive="{x:Bind ViewModel.IsBackgroundLoading, Mode=OneWay}"
                          Visibility="{x:Bind ViewModel.IsBackgroundLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
    
            <Image Source="{x:Bind ViewModel.BackgroundImageSource, Mode=OneWay}"
                   Stretch="UniformToFill"
                   Opacity="1.0"
                   Visibility="{x:Bind ViewModel.ImageVisibility, Mode=OneWay}" />

            <MediaPlayerElement x:Name="BackgroundVideo"
                                Stretch="UniformToFill"
                                Opacity="1.0"
                                Visibility="{x:Bind ViewModel.VideoVisibility, Mode=OneWay}"
                                IsHitTestVisible="False"
                                AutoPlay="True"/>
        </Grid>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" 
                        Margin="16,0,0,32"
                        VerticalAlignment="Bottom"
                        Spacing="8">
                
                <Grid CornerRadius="12"
                      BorderThickness="1"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      Background="{x:Bind ViewModel.PanelBackgroundBrush, Mode=OneWay}"
                      MinHeight="280" 
                      MaxHeight="280">
        
                    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                  Padding="20" 
                                  MaxHeight="456">
                        <StackPanel Spacing="16">
                            <TextBlock Text="游戏资讯" FontSize="24" FontWeight="Bold" Margin="0,0,0,8"/>
                            
                            <Grid Visibility="{x:Bind ViewModel.Banners.Count, Mode=OneWay, Converter={StaticResource IntToVisibilityConverter}}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="活动轮播" FontSize="14" FontWeight="SemiBold" 
                                           Margin="0,0,0,8" Opacity="0.8"/>
                                <Grid Grid.Row="1" Height="120">
                                    <Border CornerRadius="8" Background="#1F1F1F">
                                        <Image Source="{x:Bind ViewModel.CurrentBanner.Image.Url, Mode=OneWay}"
                                               Stretch="UniformToFill"
                                               Loaded="BannerImage_Loaded"
                                               ImageFailed="BannerImage_ImageFailed"/>
                                    </Border>
                                    <Button Padding="0" CornerRadius="8" BorderThickness="0" Background="Transparent"
                                            Command="{Binding ElementName=MainPageRoot, Path=OpenLinkCommand}"
                                            CommandParameter="{x:Bind ViewModel.CurrentBanner.Image.Link, Mode=OneWay}"/>
                                </Grid>
                            </Grid>
                            
                            <Grid Visibility="{x:Bind ViewModel.ActivityPosts.Count, Mode=OneWay, Converter={StaticResource IntToVisibilityConverter}}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="活动" FontSize="14" FontWeight="SemiBold" Opacity="0.8"/>
                                    <Button Grid.Column="1" Background="Transparent" BorderThickness="0" Width="32" Height="32" Padding="0"
                                            Command="{x:Bind ViewModel.ToggleActivityCommand}">
                                        <FontIcon Glyph="{x:Bind ViewModel.IsActivityPostsExpanded, Mode=OneWay, Converter={StaticResource BoolToGlyphConverter}}" 
                                                  FontSize="12"/>
                                    </Button>
                                </Grid>
                                <ItemsControl Grid.Row="1" Margin="0,8,0,0"
                                              ItemsSource="{x:Bind ViewModel.ActivityPosts}"
                                              Visibility="{x:Bind ViewModel.IsActivityPostsExpanded, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Background="Transparent" BorderThickness="0" Padding="12,8" Margin="0,2"
                                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" CornerRadius="6"
                                                    Command="{Binding ElementName=MainPageRoot, Path=OpenLinkCommand}"
                                                    CommandParameter="{Binding Link}">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <TextBlock Grid.Row="0" Text="{Binding Title}" FontSize="13" 
                                                               TextWrapping="Wrap" MaxLines="2" Margin="0,0,0,4"/>
                                                    <TextBlock Grid.Row="1" Text="{Binding Date}" FontSize="11" Opacity="0.6"/>
                                                </Grid>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                            
                            <Grid Visibility="{x:Bind ViewModel.AnnouncementPosts.Count, Mode=OneWay, Converter={StaticResource IntToVisibilityConverter}}">
                                <TextBlock Text="公告" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8" Opacity="0.8"/>
                                <ItemsControl Margin="0,8,0,0" ItemsSource="{x:Bind ViewModel.AnnouncementPosts}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Background="Transparent" BorderThickness="0" Padding="12,8" Margin="0,2"
                                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" CornerRadius="6"
                                                    Command="{Binding ElementName=MainPageRoot, Path=OpenLinkCommand}"
                                                    CommandParameter="{Binding Link}">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <TextBlock Grid.Row="0" Text="{Binding Title}" FontSize="13" 
                                                               TextWrapping="Wrap" MaxLines="2" Margin="0,0,0,4"/>
                                                    <TextBlock Grid.Row="1" Text="{Binding Date}" FontSize="11" Opacity="0.6"/>
                                                </Grid>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                            
                            <Grid Visibility="{x:Bind ViewModel.InfoPosts.Count, Mode=OneWay, Converter={StaticResource IntToVisibilityConverter}}">
                                <TextBlock Text="资讯" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8" Opacity="0.8"/>
                                <ItemsControl Margin="0,8,0,0" ItemsSource="{x:Bind ViewModel.InfoPosts}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Background="Transparent" BorderThickness="0" Padding="12,8" Margin="0,2"
                                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" CornerRadius="6"
                                                    Command="{Binding ElementName=MainPageRoot, Path=OpenLinkCommand}"
                                                    CommandParameter="{Binding Link}">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <TextBlock Grid.Row="0" Text="{Binding Title}" FontSize="13" 
                                                               TextWrapping="Wrap" MaxLines="2" Margin="0,0,0,4"/>
                                                    <TextBlock Grid.Row="1" Text="{Binding Date}" FontSize="11" Opacity="0.6"/>
                                                </Grid>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                            
                            <Grid Visibility="{x:Bind ViewModel.SocialMediaList.Count, Mode=OneWay, Converter={StaticResource IntToVisibilityConverter}}">
                                <TextBlock Text="社区" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8" Opacity="0.8"/>
                                <ItemsControl Margin="0,28,0,0" ItemsSource="{x:Bind ViewModel.SocialMediaList}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="12"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Padding="0" Width="32" Height="32"
                                                    CornerRadius="6" BorderThickness="0" Background="Transparent"
                                                    Command="{Binding ElementName=MainPageRoot, Path=OpenLinkCommand}"
                                                    CommandParameter="{Binding Icon.Link}">
                                                <Border CornerRadius="6">
                                                    <Image Source="{Binding Icon.Url}" Stretch="UniformToFill" Width="24" Height="24"/>
                                                </Border>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
                
                <Grid Padding="16" CornerRadius="8" BorderThickness="1" 
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      Background="{x:Bind ViewModel.PanelBackgroundBrush, Mode=OneWay}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="原神签到" FontSize="16" FontWeight="SemiBold" 
                               Margin="0,0,0,8" Opacity="0.9"/>
                    <StackPanel Grid.Row="1" Spacing="4" Margin="0,0,0,12">
                        <TextBlock Text="{x:Bind ViewModel.CheckinStatusText, Mode=OneWay}" FontSize="13" TextWrapping="Wrap"/>
                        <TextBlock Text="{x:Bind ViewModel.CheckinSummary, Mode=OneWay}" FontSize="11" Opacity="0.7" TextWrapping="Wrap"/>
                    </StackPanel>
                    <Button Grid.Row="2" Content="{x:Bind ViewModel.CheckinButtonText, Mode=OneWay}"
                            Command="{x:Bind ViewModel.ExecuteCheckinCommand}"
                            IsEnabled="{x:Bind ViewModel.IsCheckinButtonEnabled, Mode=OneWay}"
                            HorizontalAlignment="Stretch" CornerRadius="4" Padding="12,8"
                            Style="{StaticResource AccentButtonStyle}">
                        <Button.Resources>
                        </Button.Resources>
                    </Button>
                </Grid>
            </StackPanel>
            
            <Grid Grid.Column="1" Margin="32" Background="Transparent">
                <Button VerticalAlignment="Top" HorizontalAlignment="Right" 
                        Margin="0,0,0,12"
                        Command="{x:Bind ViewModel.ToggleBackgroundTypeCommand}"
                        IsEnabled="{x:Bind ViewModel.IsBackgroundToggleEnabled, Mode=OneWay}" 
                        Content="{x:Bind ViewModel.BackgroundTypeToggleText, Mode=OneWay}"
                        CornerRadius="6" Padding="12,6"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <Button.Resources>
                    </Button.Resources>
                </Button>
            </Grid>

            <Button Grid.Row="1" Grid.Column="1"
                    Command="{x:Bind ViewModel.OpenScreenshotFolderCommand}"
                    IsEnabled="{x:Bind ViewModel.IsLaunchButtonEnabled, Mode=OneWay}"
                    HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Margin="0,0,280,32" CornerRadius="24" Padding="18,12"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                <Button.Resources>
                </Button.Resources>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE8B7;" FontSize="16"/>
                    <TextBlock Text="截图文件夹" FontSize="14" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>
            
            <Button Grid.Row="1" Grid.Column="1"
                    Command="{x:Bind ViewModel.LaunchGameCommand}"
                    IsEnabled="{x:Bind ViewModel.IsLaunchButtonEnabled, Mode=OneWay}"
                    Style="{StaticResource AccentButtonStyle}"
                    HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Margin="0,0,32,32" CornerRadius="24" Padding="36,18"
                    FontSize="16" FontWeight="SemiBold">
                <Button.Resources>
                </Button.Resources>
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <ProgressRing Width="20" Height="20"
                                  IsActive="{x:Bind ViewModel.IsGameLaunching, Mode=OneWay}"
                                  Visibility="{x:Bind ViewModel.IsGameLaunching, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    
                    <FontIcon Glyph="{x:Bind ViewModel.LaunchButtonIcon, Mode=OneWay}" FontSize="20"/>
        
                    <TextBlock Text="{x:Bind ViewModel.LaunchButtonText, Mode=OneWay}"
                               FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>